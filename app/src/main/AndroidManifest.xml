<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dsantillanes.cine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_grey600_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PictureDetail"
            android:label="@string/title_activity_picture_detail"
            android:theme="@style/AppTheme" />
        <activity android:name=".CreatePicture" />
        <activity
            android:name=".SerieDetail"
            android:label="@string/title_activity_serie_detail"
            android:theme="@style/AppTheme" />
        <activity android:name=".CreateSerie"></activity>
    </application>

</manifest>