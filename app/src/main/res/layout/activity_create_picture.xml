<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsantillanes.cine.CreatePicture">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="?attr/actionBarSize">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:paddingTop="15dp"></ImageView>
            <Button
                android:id="@+id/buttonLoadPicture"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cargar imagen"></Button>
        </LinearLayout>

        <ScrollView
            android:id="@+id/form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:weightSum="1">

                <TextView
                    android:text="Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombre"
                    android:layout_alignLeft="@+id/txtNombre"
                    android:layout_alignStart="@+id/txtNombre"
                    android:layout_marginTop="21dp"
                    android:id="@+id/textView1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtNombre"
                    android:text="popo" />

                <TextView
                    android:text="Director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombre"
                    android:layout_alignLeft="@+id/txtNombre"
                    android:layout_alignStart="@+id/txtNombre"
                    android:layout_marginTop="21dp"
                    android:id="@+id/textView3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:layout_below="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtDirector" />

                <TextView
                    android:text="Actor Principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/txtDirector"
                    android:layout_alignStart="@+id/txtDirector"
                    android:id="@+id/textView4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:layout_marginTop="12dp"
                    android:id="@+id/txtActorPpal"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4" />

                <TextView
                    android:text="Duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtActorPpal"
                    android:layout_alignLeft="@+id/txtActorPpal"
                    android:layout_alignStart="@+id/txtActorPpal"
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView5" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_marginTop="13dp"
                    android:id="@+id/editText4" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</RelativeLayout>
